    "fastify": "5.6.1",
    "json-stable-stringify": "1.3.0",
    "node-cron": "3.0.3",
    "node-pg-migrate": "7.9.1",
    "pg": "8.16.3",
    "pg-promise": "11.15.0",
    "pg-query-stream": "4.10.3",
    "tiny-secp256k1": "2.2.4",
    "tronweb": "6.1.0",
    "tweetnacl": "1.0.3",
