    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "dotenv": "16.6.1",
    "eslint": "9.39.2",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-package-json-dependencies": "1.0.20",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jsonc-eslint-parser": "2.4.2",
    "lint-staged": "16.2.7",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  }
