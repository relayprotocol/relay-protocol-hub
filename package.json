    "@fastify/swagger-ui": "5.2.3",
    "@fastify/type-provider-typebox": "5.2.0",
    "@near-js/providers": "2.3.4",
    "@reservoir0x/relay-protocol-sdk": "0.0.60",
    "@sinclair/typebox": "0.34.41",
    "@solana/web3.js": "1.98.4",
    "asn1.js": "5.4.1",
    "axios": "1.12.2",
    "bech32": "2.0.0",
    "bitcoinjs-lib": "6.1.7",
    "bn.js": "5.2.2",
    "bs58": "6.0.0",
