{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "module": "CommonJS",

    // Module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},

    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
